{
  "name": "hospital-appointment-api",
  "version": "1.0.0",
  "description": "Hospital Appointment & Patient Management REST API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "typeorm": "typeorm",
    "migration:generate": "typeorm migration:generate -d src/config/data-source.js",
    "migration:run": "typeorm migration:run -d src/config/data-source.js",
    "migration:revert": "typeorm migration:revert -d src/config/data-source.js",
    "create-admin": "node src/scripts/createAdmin.js"
  },
  "keywords": [
    "hospital",
    "appointment",
    "api",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  }
}
